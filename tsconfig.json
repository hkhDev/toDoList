{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "app.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
