{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "app.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
